<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyf.web.dao.Function">

    <select id="findAll" resultType="hero">
        select * from hero
    </select>

    <select id="findById" parameterType="Integer" resultType="hero">
  	select * from hero where id=#{id}
  	</select>

	<delete id="deleteById" parameterType="Integer">
		delete from hero where id=#{id}
	</delete>

    <insert id="insertHero" parameterType="hero">
  	insert into hero(id,name,money) values(#{id},#{name},#{money})
  	</insert>

	<update id="updateHero" parameterType="hero">
		update hero set name=#{name},money=#{money} where id=#{id}
	</update>
</mapper>